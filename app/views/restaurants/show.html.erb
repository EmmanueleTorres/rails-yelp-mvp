<p><%= @restaurant.name %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> | <%= "*" * review.rating %> | <%= link_to "delete", review_path(review), method: :delete, data: { confirm: "are you sure?" } %> </li>
  <% end %>
</ul>
<%= link_to "<< Go back",  restaurants_path(@restaurant) %>
<%= link_to "Add a review",  new_restaurant_review_path(@restaurant) %>